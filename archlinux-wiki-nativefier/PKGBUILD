# Maintainer: Robert Fry <contact@robertfry.xyz>

pkgname=archlinux-wiki-nativefier
pkgver=1
pkgrel=1
pkgdesc="Electron wrapper for wiki.archlinux.org"
arch=(x86_64)
url=https://wiki.archlinux.org
license=('GPL','custom:2')
makedepends=(nodejs nodejs-nativefier npm)
source=(archlinux-wiki-nativefier.desktop
        archlinux-wiki-nativefier.png)
sha256sums=(05bc4530f2b54364bb3cec0fa44f50038b4aaf8994f3cb210d558f1d48265404
            a74923f6b6ca60cc5cec192cae7da93385c7eb2048c993144bbcecab1a217882)

_instname=archlinux-wiki-nativefier
_execname=ArchLinux-Wiki-Nativefier
_builddir=$_execname-linux-x64

build() {
  nativefier "https://wiki.archlinux.org" \
    --name $_execname \
    --icon "archlinux-wiki-nativefier.png"
}

package() {
  install -d "$pkgdir"/opt
  cp -rL $_builddir "$pkgdir"/opt/$pkgname

  install -d "$pkgdir"/usr/{bin,share/pixmaps}
  ln -sf /opt/$pkgname/$_execname "$pkgdir"/usr/bin/$_instname
  ln -sf /opt/$pkgname/resources/app/icon.png "$pkgdir"/usr/share/pixmaps/$_instname.png

  install -Dm644 $pkgname.desktop "$pkgdir"/usr/share/applications/$_instname.desktop
}
